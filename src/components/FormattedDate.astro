---
interface Props {
	date: Date;
}

const { date } = Astro.props;
const validDate = date ? new Date(date) : null;
---

<time datetime={validDate ? validDate.toISOString() : ''}>
	{
		validDate
			? validDate.toLocaleDateString('en-us', {
					year: 'numeric',
					month: 'short',
					day: 'numeric',
			  })
			: 'Invalid date'
	}
</time>
